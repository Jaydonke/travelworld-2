---
import BaseLayout from "@layouts/BaseLayout.astro";
import { SITE, PAGES_CONFIG, SITE_REFERENCES } from "@/lib/config";

// Get terms data from config
const termsData = PAGES_CONFIG?.terms || {};
const title = termsData.title || "Terms of Use";
const description = termsData.description || `These terms govern the use of our website and services. By accessing or using PopZic, you agree to comply with these terms.`;
const subtitle = termsData.subtitle || `By using ${SITE.url?.replace('https://', '').replace('http://', '')}, you agree to these terms and conditions.`;
const lastUpdated = termsData.lastUpdated || "December 2024";
const introduction = termsData.introduction || `Welcome to ${SITE.title}. These Terms of Use govern your use of our website and services.`;
const sections = termsData.sections || [];

// Get site name for dynamic replacement
const siteName = SITE.title;
const siteUrl = SITE.url?.replace('https://', '').replace('http://', '') || 'our website';
const legalEmail = termsData.contactEmail || SITE_REFERENCES?.legalEmail || `legal@${siteUrl}`;
---

<BaseLayout title={title} description={description}>
  <section class="site-container">
    <div class="mx-auto max-w-4xl pt-24 md:pt-36 pb-12">
      <h1 class="h1 text-center mb-2">{title}</h1>
      <p class="text-center text-lg text-gray-600 dark:text-gray-400 mb-4">{subtitle}</p>
      <div class="flex justify-center mb-8">
        <div class="inline-flex items-center px-4 py-2 bg-blue-50 dark:bg-blue-900/20 rounded-full">
          <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-sm font-medium text-blue-600 dark:text-blue-400">
            Effective: {lastUpdated}
          </span>
        </div>
      </div>
      <hr class="bg-primary-600/50 mx-auto mt-4 mb-12 max-w-[30%] rounded-full border-none pt-1" />
      
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-8 md:p-12">
        
        <!-- Introduction -->
        <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            {introduction}
          </p>
        </div>

        <!-- Sections -->
        <div class="space-y-12">
          {sections.map((section) => (
            <section id={section.id}>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-3 border-b border-gray-200 dark:border-gray-700">
                {section.title}
              </h2>
              
              {section.content && (
                <p class="text-gray-600 dark:text-gray-300 mb-6">
                  {section.content.replace(/PopZic/g, siteName)}
                </p>
              )}
              
              {/* Highlights for Acceptance section */}
              {section.highlights && (
                <div class="bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-400 p-6">
                  <p class="text-gray-700 dark:text-gray-300 mb-3">These Terms apply to:</p>
                  <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                    {section.highlights.map(item => (
                      <li>{item.replace(/PopZic/g, siteName)}</li>
                    ))}
                  </ul>
                </div>
              )}
              
              {/* Permitted Uses and Restrictions for Use of Content section */}
              {(section.permittedUses || section.restrictions) && (
                <div class="space-y-6">
                  {section.permittedUses && (
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">
                        Permitted Uses
                      </h3>
                      <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-6">
                        <ul class="space-y-3">
                          {section.permittedUses.map(use => (
                            <li class="flex items-start">
                              <svg class="w-5 h-5 mt-0.5 mr-3 text-green-600 dark:text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                              </svg>
                              <span class="text-gray-700 dark:text-gray-300">{use}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                  )}
                  
                  {section.restrictions && (
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">
                        Restrictions
                      </h3>
                      <div class="bg-red-50 dark:bg-red-900/20 rounded-lg p-6">
                        <ul class="space-y-3">
                          {section.restrictions.map(restriction => (
                            <li class="flex items-start">
                              <svg class="w-5 h-5 mt-0.5 mr-3 text-red-600 dark:text-red-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                              </svg>
                              <span class="text-gray-700 dark:text-gray-300">{restriction}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                  )}
                </div>
              )}
              
              {/* Prohibitions for User Conduct section */}
              {section.prohibitions && (
                <div class="grid md:grid-cols-2 gap-4">
                  {section.prohibitions.map(prohibition => (
                    <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4">
                      <h3 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">{prohibition.title}</h3>
                      <p class="text-sm text-gray-600 dark:text-gray-400">{prohibition.description}</p>
                    </div>
                  ))}
                </div>
              )}
              
              {/* License for Intellectual Property section */}
              {section.license && (
                <div class="bg-purple-50 dark:bg-purple-900/20 rounded-lg p-6 mt-4">
                  <div class="flex items-start">
                    <svg class="w-6 h-6 mr-3 text-purple-600 dark:text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                    <div>
                      <p class="text-gray-600 dark:text-gray-300">
                        Content is licensed under <strong class="text-purple-700 dark:text-purple-300">{section.license}</strong> unless otherwise noted.
                      </p>
                    </div>
                  </div>
                </div>
              )}
              
              {/* Disclaimers list */}
              {section.disclaimers && (
                <div class="bg-yellow-50 dark:bg-yellow-900/20 border-l-4 border-yellow-400 p-6">
                  <h3 class="font-semibold text-gray-800 dark:text-gray-200 mb-2">No Warranties</h3>
                  <p class="text-gray-700 dark:text-gray-300 mb-3">We specifically disclaim:</p>
                  <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                    {section.disclaimers.map(disclaimer => (
                      <li>{disclaimer}</li>
                    ))}
                  </ul>
                </div>
              )}
              
              {/* Exclusions for Limitation of Liability */}
              {section.exclusions && (
                <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                  {section.exclusions.map(exclusion => (
                    <li>{exclusion}</li>
                  ))}
                </ul>
              )}
              
              {/* Reasons for Termination */}
              {section.reasons && (
                <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-6">
                  <ul class="list-disc pl-6 space-y-2 text-gray-600 dark:text-gray-300">
                    {section.reasons.map(reason => (
                      <li>{reason}</li>
                    ))}
                  </ul>
                </div>
              )}
              
              {/* Contact section */}
              {section.contactEmail && (
                <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-lg p-8 text-center">
                  <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">
                    Questions About These Terms?
                  </h3>
                  <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href={`mailto:${section.contactEmail || legalEmail}`}
                       class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                      Email Legal Team
                    </a>
                    <a href="/contact" 
                       class="inline-flex items-center justify-center px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                      </svg>
                      Contact Form
                    </a>
                  </div>
                </div>
              )}
            </section>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>