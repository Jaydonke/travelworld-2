---
import BaseLayout from "@layouts/BaseLayout.astro";
import { SITE, PAGES_CONFIG, SITE_REFERENCES } from "@/lib/config";

// Get support data from config
const supportData = PAGES_CONFIG?.support || {};
const title = supportData.title || "Support";
const description = supportData.description || `Get help with ${SITE.title}'s resources and services`;
const subtitle = supportData.subtitle || description;

// Get site name for dynamic replacement
const siteName = SITE.title;
const siteUrl = SITE.url?.replace('https://', '').replace('http://', '') || 'our website';

// Get support categories
const categories = supportData.categories || [];

// Get contact channels
const contactChannels = supportData.contactChannels || {
  title: "Contact Channels",
  description: "Choose the best way to reach us",
  channels: []
};

// Get FAQ
const faq = supportData.faq || {
  title: "Frequently Asked Questions",
  items: []
};

// Get response times
const responseTime = supportData.responseTime || {
  title: "Response Times",
  description: "We aim to respond to all inquiries promptly",
  times: []
};

// Get quick actions
const quickActions = supportData.quickActions || [];

// Icon mapping
const iconMap = {
  settings: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>`,
  help: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>`,
  briefcase: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>`
};

// Icon color mapping
const iconColorMap = {
  settings: "blue",
  help: "green",
  briefcase: "purple"
};
---

<BaseLayout title={title} description={description}>
  <section class="site-container">
    <div class="mx-auto max-w-6xl pt-24 md:pt-36 pb-12">
      <h1 class="h1 text-center mb-2">{title}</h1>
      <p class="text-center text-lg text-gray-600 dark:text-gray-400 mb-8">{subtitle}</p>
      <hr class="bg-primary-600/50 mx-auto mt-4 mb-12 max-w-[30%] rounded-full border-none pt-1" />
      
      <!-- Quick Actions -->
      {quickActions.length > 0 && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          {quickActions.map(action => (
            <a href={action.href}
               class={action.primary 
                 ? "inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                 : "inline-flex items-center justify-center px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"}>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {action.href.includes("contact") ? (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                ) : (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                )}
              </svg>
              {action.text}
            </a>
          ))}
        </div>
      )}
        
      <!-- Support Categories -->
      {categories.length > 0 && (
        <section class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">How Can We Help You?</h2>
          <div class="grid md:grid-cols-3 gap-6">
            {categories.map(category => {
              const color = iconColorMap[category.icon] || "blue";
              return (
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 hover:shadow-lg transition-shadow">
                  <div class={`w-12 h-12 bg-${color}-100 dark:bg-${color}-900/30 rounded-lg flex items-center justify-center mb-4`}>
                    <svg class={`w-6 h-6 text-${color}-600 dark:text-${color}-400`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={iconMap[category.icon] || iconMap.help}>
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{category.title}</h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-4">
                    {category.description.replace(/PopZic/g, siteName)}
                  </p>
                  <a href={`mailto:${category.email}`} class="text-blue-600 dark:text-blue-400 hover:underline font-medium">
                    {category.email} →
                  </a>
                </div>
              );
            })}
          </div>
        </section>
      )}

      <!-- Contact Channels -->
      {contactChannels.channels.length > 0 && (
        <section id="contact-channels" class="mb-16">
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">{contactChannels.title}</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-8">{contactChannels.description}</p>
            
            <div class="grid md:grid-cols-2 gap-8">
              {contactChannels.channels.map(channel => (
                <div class="border-l-4 border-blue-400 pl-6">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{channel.title}</h3>
                  <p class="text-gray-600 dark:text-gray-400 mb-2">{channel.description}</p>
                  <p class="text-sm text-gray-500 dark:text-gray-500 mb-3">{channel.detail}</p>
                  <a href={`mailto:${channel.action}`} class="text-blue-600 dark:text-blue-400 hover:underline font-medium">
                    {channel.action} →
                  </a>
                </div>
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- Response Times -->
      {responseTime.times.length > 0 && (
        <section class="mb-16">
          <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-xl p-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{responseTime.title}</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-6">{responseTime.description}</p>
            <div class="grid md:grid-cols-3 gap-4">
              {responseTime.times.map(time => (
                <div class="bg-white/80 dark:bg-gray-800/80 rounded-lg p-4">
                  <h3 class="font-semibold text-gray-800 dark:text-gray-200">{time.type}</h3>
                  <p class="text-2xl font-bold text-blue-600 dark:text-blue-400 mt-1">{time.time}</p>
                </div>
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- FAQ Section -->
      {faq.items.length > 0 && (
        <section id="faq" class="mb-16">
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">{faq.title}</h2>
            <div class="space-y-6">
              {faq.items.map((item, index) => (
                <details class="group">
                  <summary class="flex items-start cursor-pointer list-none">
                    <div class="flex-1">
                      <h3 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                        {index + 1}. {item.question}
                      </h3>
                    </div>
                    <svg class="w-5 h-5 text-gray-400 group-open:rotate-180 transition-transform ml-2 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                  </summary>
                  <div class="mt-4 ml-0 text-gray-600 dark:text-gray-400">
                    <p>{item.answer.replace(/PopZic/g, siteName).replace(/PopZic\.site/g, siteUrl)}</p>
                  </div>
                </details>
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- Still Need Help? -->
      <section class="text-center">
        <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl p-12 text-white">
          <h2 class="text-3xl font-bold mb-4">Still Need Help?</h2>
          <p class="text-xl mb-8 opacity-90">
            Our support team is here to assist you with any questions or concerns.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" 
               class="inline-flex items-center justify-center px-8 py-4 bg-white text-blue-600 rounded-lg hover:bg-gray-100 transition-colors font-semibold">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Contact Us Now
            </a>
            <a href={`mailto:${SITE_REFERENCES?.supportEmail || 'support@' + siteUrl}`}
               class="inline-flex items-center justify-center px-8 py-4 bg-white/20 text-white rounded-lg hover:bg-white/30 transition-colors font-semibold">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Email Support
            </a>
          </div>
        </div>
      </section>
    </div>
  </section>
</BaseLayout>