---
import BaseLayout from "@layouts/BaseLayout.astro";

const title = "Legal & Support";
const description = "Legal information, policies, and support resources for PopZic.";

const legalPages = [
  {
    title: "Privacy Policy",
    description: "How we collect, use, and protect your data",
    href: "/legal/privacy",
    icon: "ðŸ”’"
  },
  {
    title: "Terms of Use",
    description: "Terms and conditions for using our services",
    href: "/legal/terms",
    icon: "ðŸ“œ"
  },
  {
    title: "Support",
    description: "Get help and find answers to your questions",
    href: "/legal/support",
    icon: "ðŸ’¬"
  }
];
---

<BaseLayout title={title} description={description}>
  <section class="site-container">
    <div class="mx-auto max-w-4xl pt-24 md:pt-36 pb-12">
      <h1 class="h1 text-center mb-4">{title}</h1>
      <p class="text-center text-gray-600 dark:text-gray-400 mb-12">
        Important information about using PopZic's services
      </p>
      
      <div class="grid md:grid-cols-2 gap-6">
        {legalPages.map((page) => (
          <a 
            href={page.href}
            class="block p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300"
          >
            <div class="flex items-start space-x-4">
              <span class="text-3xl">{page.icon}</span>
              <div class="flex-1">
                <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-gray-100">
                  {page.title}
                </h2>
                <p class="text-gray-600 dark:text-gray-400">
                  {page.description}
                </p>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-12 p-6 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
        <h2 class="text-lg font-semibold mb-3">Need Help?</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          Can't find what you're looking for? We're here to help!
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href="/contact" 
            class="inline-block px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
          >
            Contact Us
          </a>
          <a 
            href="mailto:support@TravelWorld.com" 
            class="inline-block px-6 py-2 border border-blue-600 text-blue-600 dark:text-blue-400 rounded hover:bg-blue-50 dark:hover:bg-blue-900/30 transition"
          >
            Email Support
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>